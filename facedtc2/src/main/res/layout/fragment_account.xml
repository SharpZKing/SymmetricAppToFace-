<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@color/colorPressed">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/add_pic"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFF"/>

        <TextView
            android:gravity="center"
            android:id="@+id/tv_user_account"
            android:layout_marginTop="15dp"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:textColor="#fff"
            android:background="@drawable/button_bg"
            android:text="未登入"/>
    </LinearLayout>

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="0dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:textColor="#888"
                    android:textSize="19sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名昵称:"
                    />

                <EditText
                    android:textColor="#888"
                    android:id="@+id/et_username_account"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:textColor="#888"
                    android:textSize="19sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式:"
                    />

                <EditText
                    android:textColor="#888"
                    android:id="@+id/et_phone_account"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:textColor="#888"
                    android:textSize="19sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性        别:"
                    />

                <EditText
                    android:textColor="#888"
                    android:id="@+id/et_sex_account"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_marginTop="5dp"
                android:background="#bbb"
                android:layout_width="match_parent"
                android:layout_height="2px"></View>


            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/look_about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#888"
                    android:text="关于我们"/>

            </LinearLayout>

            <View
                android:layout_marginTop="15dp"
                android:background="#bbb"
                android:layout_width="match_parent"
                android:layout_height="2px"></View>


            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/update_apk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#888"
                    android:text="检查更新"/>

            </LinearLayout>


            <View
                android:layout_marginTop="15dp"
                android:background="#bbb"
                android:layout_width="match_parent"
                android:layout_height="2px"></View>

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/updateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提交修改"
                android:textColor="#fff"
                android:background="@drawable/button_bg"
                />

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textColor="#fff"
                android:background="@drawable/button_bg"
                />

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="退出登入"
                android:textColor="#fff"
                android:background="@drawable/button_bg"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
