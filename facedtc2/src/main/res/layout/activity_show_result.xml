<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="right"
            >
            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等    级:"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时    间:"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对称度:"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="眉毛角度:"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="眼睛角度:"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鼻子角度:"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="嘴巴角度:"/>


            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评    价:"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/red16"/>

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/red16"/>

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/red16"/>
                    <ImageView
                        android:id="@+id/star4"
                        android:layout_marginLeft="10dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/hole161"/>

                    <ImageView
                        android:id="@+id/star5"
                        android:layout_marginLeft="10dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/hole161"/>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/tv_time_re"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-02-28"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_asym_re"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85%"/>

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/tv_eyebrow_re"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85%"/>

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/tv_eye_re"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85%"/>

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/tv_nose_re"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85%"/>

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/tv_mouth_re"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85%"/>


            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/tv_comment_re"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="良好，没有任何问题..."/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
