<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/backgroud_list_item"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/grade"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等    级:"
            />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/grade"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/red16"/>

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/red16"/>

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/red16"/>
            <ImageView
                android:id="@+id/star4"
                android:layout_marginLeft="10dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
               android:background="@drawable/hole161"/>

            <ImageView
                android:id="@+id/star5"
                android:layout_marginLeft="10dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/hole161"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对称度:"
            />

        <TextView
            android:id="@+id/tv_asym"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="85%"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时    间:"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="2017-02-28"/>

    </LinearLayout>


    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评    价:"
            />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="良好，没有任何问题..."/>

    </LinearLayout>

    <!--<view
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#888"
        />-->



</LinearLayout>
